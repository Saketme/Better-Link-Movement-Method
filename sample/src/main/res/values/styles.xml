<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="BLMMSampleAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Button"/>

  <style name="BetterLinkMovementMethodSubtitle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-smallcaps</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="BetterLinkMovementMethodText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#eee</item>
    <item name="android:layout_marginBottom">8dp</item>
  </style>
</resources>
